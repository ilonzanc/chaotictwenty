<h2>Login</h2>

<?php if (isset($this->errors)) : ?>
<ul class="error">
    <?php foreach ($this->errors as $error) : ?>
        <li><?php echo $error; ?></li>
    <?php endforeach; ?>
</ul>
<?php endif; ?>

<?php echo $this->Form->start(array('method' => 'post')); ?>
<ul>
    <li><?php echo $this->Form->input('username'); ?></li>
    <li><?php echo $this->Form->password('password'); ?></li>
    <li><?php echo $this->Form->submit(); ?></li>
</ul>
<?php echo $this->Form->end(); ?>
